@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>The Wall</h1>
    <div class="errors">
        @{
            if (ViewBag.Errors != null) {
                foreach(var error in ViewBag.Errors) {
                    <p>@error</p>
                }
            }
        }
        
    </div>
    <div class="login">
        <h3><u>Login</u></h3>
        <form action="Login" method="post">
            <h4 class="form-titles">Email: </h4><input type="text" name="Email">
            <h4 class="form-titles">Password: </h4><input type="password" name="Password"><br>
            <input class="btn btn-default login-btn" type="submit" value="Submit">
        </form>
    </div>

    <div class="register">
        <h3><u>Register</u></h3>
        <form action="Register" method="post">
            <h4 class="form-titles">First Name: </h4><input type="text" name="first_name">
            <h4 class="form-titles">Last Name: </h4><input type="text" name="last_name">
            <h4 class="form-titles">Email: </h4><input type="text" name="email">
            <h4 class="form-titles">Password: </h4><input type="password" name="password">
            <h4 class="form-titles">Confirm Password: </h4><input type="password" name="PasswordC"><br>
            <input class="btn btn-success login-btn " type="submit" value="Submit">
        </form>
    </div>

  </body>
</html>